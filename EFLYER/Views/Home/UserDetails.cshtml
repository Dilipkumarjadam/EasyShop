@model IEnumerable<EFLYER.DTOs.RegisteredUserDTO>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile View</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <style>
        @@keyframes gradientAnimation {
            0% {
                background-position: 0% 0%;
            }

            50% {
                background-position: 100% 100%;
            }

            100% {
                background-position: 0% 0%;
            }
        }

        body {
            background: linear-gradient(135deg, #6a1b9a, #ab47bc, #ff4081, #ff5722); /* Gradient colors */
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            height: 100vh;
            color: #333;
        }

        .profile-container {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .profile-header h4 {
                font-size: 2rem;
                color: #007bff;
                font-weight: 600;
            }

        .profile-details {
            margin-bottom: 30px;
        }

            .profile-details dt {
                font-weight: 600;
                color: #333;
            }

            .profile-details dd {
                font-size: 1.1rem;
                margin-bottom: 10px;
                color: #555;
            }

        .profile-image {
            text-align: center;
            margin-bottom: 20px;
        }

            .profile-image img {
                max-width: 150px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .action-links {
            text-align: center;
            margin-top: 20px;
        }

            .action-links .btn {
                font-size: 1.1rem;
                margin: 0 10px;
                padding: 10px 20px;
                border-radius: 5px;
                color: #fff;
                transition: background-color 0.3s, transform 0.3s;
            }

            .action-links .btn-primary {
                background-color: #007bff;
                border: none;
            }

                .action-links .btn-primary:hover {
                    background-color: #0056b3;
                    transform: scale(1.05);
                }

            .action-links .btn-secondary {
                background-color: #6c757d;
                border: none;
            }

                .action-links .btn-secondary:hover {
                    background-color: #5a6268;
                    transform: scale(1.05);
                }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-header">
            <h4>Profile</h4>
            <hr />
        </div>
        @foreach (var item in Model)
        {
            <div class="profile-image">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@Url.Content(item.ImagePath)" alt="User Image" />
                }
                else
                {
                    <img src="@Url.Content("~/Image/default.jpg")" alt="Default Image" />
                }
            </div>
            <div class="profile-details">
                <dl class="row">
                    <dt class="col-sm-3">User ID</dt>
                    <dd class="col-sm-9">@item.RegId</dd>
                    <dt class="col-sm-3">Full Name</dt>
                    <dd class="col-sm-9">@item.FullName</dd>
                    <dt class="col-sm-3">Mobile</dt>
                    <dd class="col-sm-9">@item.Mobile</dd>
                    <dt class="col-sm-3">Country</dt>
                    <dd class="col-sm-9">@item.CountryName</dd>
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@item.Email</dd>
                </dl>
            </div>
        }
        <div class="action-links">
            <a href="@Url.Action("EditUserDetails", "Home", new { id = Model.FirstOrDefault()?.RegId })" class="btn btn-primary">
                <i class="fas fa-user-edit"></i> Edit Profile
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
