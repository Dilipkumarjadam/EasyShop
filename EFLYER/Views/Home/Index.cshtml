@model EFLYER.DTOs.ProductsViewModel
<!-- Fashion Section Start -->
<style>
    
</style>

<div class="fashion_section">
    <!-- Fashion Carousel -->
    <div id="main_slider" class="carousel slide mt-5" data-ride="carousel">
        <div class="carousel-inner">
            @if (Model.Fashion != null && Model.Fashion.Any())
            {
                var itemsPerSlide = 3;
                var totalSlides = (int)Math.Ceiling((double)Model.Fashion.Count() / itemsPerSlide);

                for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                {
                    var productsForSlide = Model.Fashion.Skip(slideIndex * itemsPerSlide).Take(itemsPerSlide);
                    <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                        <div class="container">
                            <h1 class="fashion_taital">Fashion</h1>
                            <div class="fashion_section_2">
                                <div class="row">
                                    @foreach (var product in productsForSlide)
                                    {
                                        <div class="col-lg-4 col-sm-4 mb-4">
                                            <div class="box_main">
                                                <h4 class="shirt_text">@product.ProductName</h4>
                                                <p class="price_text">Start Price <span style="color: #262626;">$ @product.Price</span></p>
                                                <div class="tshirt_img">
                                                    <img src="@Url.Content(product.ProductImagePath)" asp-append-version alt="@product.ProductName">
                                                </div>
                                                <div class="btn_main">
                                                    <div class="buy_bt"><a href="#">Buy Now</a></div>
                                                    <div class="seemore_bt"><a href="@Url.Action("Fashion","Product")">See More</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (productsForSlide.Count() < itemsPerSlide)
                                    {
                                        var emptyColumns = itemsPerSlide - productsForSlide.Count();
                                        for (int i = 0; i < emptyColumns; i++)
                                        {
                                            <div class="col-lg-4 col-sm-4 mb-4"></div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="carousel-item active">
                    <div class="container">
                        <h1 class="fashion_taital">Fashion</h1>
                        <div class="fashion_section_2">
                            <div class="row">
                                <div class="col-12">
                                    <p>No products available.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <i class="fa fa-angle-right"></i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-left"></i>
        </a>
    </div>
</div>

